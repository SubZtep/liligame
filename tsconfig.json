{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "noImplicitAny": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": ["src/**/*", "games/**/*", "server.ts"]
}
